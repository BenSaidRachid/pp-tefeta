{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["ESNext"],
    "allowJs": false,
    "noEmit": false,
    "outDir": ".dist",
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedParameters": true, 
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ]
}
